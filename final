var currentScene = "main_screen";
var score = 0;

background(212, 255, 112);
//Button prototypes
var Button = function(config) {
    this.x = config.x || 0;
    this.y = config.y || 0;
    this.width = config.width || 0;
    this.height = config.height || 0;
    this.buttonColor = config.buttonColor;
    this.label = config.label; 
};

Button.prototype.isMouseClicked = function() {
    return mouseX > this.x &&
    mouseX < (this.x +this.width) &&
    mouseY > this.y &&
    mouseY < (this.y + this.height);
};

Button.prototype.draw = function() {
     fill(this.buttonColor);
     rect(this.x, this.y, this.width, this.height, 5);
     fill(0,0,0);
     textSize(15);
     text(this.label, this.x, this.y+this.height);
};

var drawButton = function(btn) {
    fill(this.buttonColor);
    rect(btn.x, btn.y, btn.width, btn.height, 40);
    fill(0, 0, 0);
    textSize(15);
};

//start screen
var splash = function() {
    currentScene = "main_screen";
    fill(255, 255, 255);
    ellipse(200, 50, 310, 70);
    fill(0, 0, 0);
    text("Culture",291,321);
    text("Sports",173,321);
    text("Video Games",29,321);
    textSize(25);
    text("Final Project Trivia Game", 60, 40, 300, 300);
    fill(0, 0, 0);
    textSize(15);
    text("Katie Boss", 88, 240, 90, 130);
    text("Danny Tran", 243, 240, 90, 130);
    textSize(20);
    text("Choose a Category", 110, 360, 300, 300);
};
