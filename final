//QUESTION 5 culture
var cultureScene5 = function() {
    currentScene = "culture_scene5";
    background(151, 115, 230);
    fill(211, 164, 242);
    rect(23,19,353,362);
    textSize(15);
    fill(0, 0, 0);
    //Questions
    text("Question 5",160,60);
    text("What percentage of the world population",60,90);
    text("uses the internet?", 140, 110);
    
var cultureScene5wrong = function() {
    currentScene = "culture_scene5wrong";
    background(255, 0, 0);
    fill(0, 0, 0);
    textSize(50);
    text("Incorrect",100,200);
    
    draw = function() {
         if(currentScene === "culture_scene5wrong") {
             if(mouseIsPressed && isMouseInside(culturebtn_return)) {
                cultureEndScreen();
             }
         }
    };
    };
var cultureScene5correct = function() {
    currentScene = "culture_scene4correct";
    background(157, 235, 0);
    fill(0, 0, 0);
    textSize(50);
    text("Correct",125,200);
    score++;
    
    draw = function() {
         if(currentScene === "culture_scene4correct") {
             if(mouseIsPressed && isMouseInside(culturebtn_return)) {
                cultureEndScreen();
             }
         }
    };
};
draw = function() {
    if(currentScene === "culture_scene5") {
        if(mouseIsPressed && isMouseInside(culturebtn5)) {
            cultureScene5correct();
            culturebtn_return.draw();
            }
            if(mouseIsPressed && isMouseInside(culturebtn5wrong1)) {
            cultureScene5wrong();
            culturebtn_return.draw();
            }
            if(mouseIsPressed && isMouseInside(culturebtn5wrong2)) {
            cultureScene5wrong();
            culturebtn_return.draw();
            }
            if(mouseIsPressed && isMouseInside(culturebtn5wrong3)) {
            cultureScene5wrong();
            culturebtn_return.draw();
            }
        }
    };
};

